# IRC Bot Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

owners = []
nickname = "{{ merged_irc_config.nickname }}"
nick_password = ""
alt_nicks = {{ merged_irc_config.alt_nicks | to_json }}
username = "{{ merged_irc_config.username }}"
realname = "{{ merged_irc_config.realname }}"
server = "{{ merged_irc_config.server }}"
port = {{ merged_irc_config.port }}
password = "{{ merged_irc_config.password }}"
proxy_type = "None"
proxy_server = "127.0.0.1"
proxy_port = 1080
proxy_username = ""
proxy_password = ""
use_tls = {{ merged_irc_config.use_tls | lower }}
cert_path = ""
client_cert_path = ""
client_cert_pass = ""
encoding = "{{ merged_irc_config.encoding }}"
channels = {{ merged_irc_config.channels | to_json }}
umodes = "{{ merged_irc_config.umodes }}"
user_info = "{{ merged_irc_config.user_info }}"
version = "{{ merged_irc_config.version }}"
source = ""
ping_time = {{ merged_irc_config.ping_time }}
ping_timeout = {{ merged_irc_config.ping_timeout }}
burst_window_length = {{ merged_irc_config.burst_window_length }}
max_messages_in_burst = {{ merged_irc_config.max_messages_in_burst }}
should_ghost = {{ merged_irc_config.should_ghost | lower }}
ghost_sequence = []

[channel_keys]
{% if merged_irc_config.channel_keys %}
{% for channel, key in merged_irc_config.channel_keys.items() %}
"{{ channel }}" = "{{ key }}"
{% endfor %}
{% else %}
# Add channel passwords here if needed
# "#private" = "password"
{% endif %}

[options]
deployed_by = "Ansible"
deployment_time = "{{ ansible_date_time.iso8601 }}"
deployment_host = "{{ inventory_hostname }}"
